extends templates/page/page

include layouts/wrap/wrap
include layouts/grid/grid
include layouts/title/title

block prepend scripts
    script(src='/js/jquery-3.5.1.min.js')
    script(src='/assets/ion-rangeslider-2.3.1/js/ion.rangeSlider.js')
    script(src='/js/jquery.inputmask.min.js')
    script(src='/js/pagination.min.js')

block append styles
    link(rel="stylesheet" href="/assets/ion-rangeslider-2.3.1/css/ion.rangeSlider.css")

block content
    .catalog
        +wrap
            +grid
                include blocks/filter/filter
                .catalog-list
                    +title('h1', 'Каталог')
                    include components/sorting/sorting
                    +grid
                        include components/product/product
                        include components/product/product
                        include components/product/product
                        include components/product/product
                        include components/product/product
                        include components/product/product
                        include components/product/product
                        include components/product/product
                        include components/product/product
                    include components/pagination/pagination
